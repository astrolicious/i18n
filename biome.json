{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"files": {
		"includes": [
			"**",
			"!playground",
			"!demo",
			"!docs",
			"!**/dist",
			"!**/.astro",
			"!**/.netlify"
		]
	}
}
